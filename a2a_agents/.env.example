# A2A Server Configuration
A2A_SERVER_HOST=0.0.0.0
A2A_SERVER_PORT=8000

# Email Processor Agent
EMAIL_PROCESSOR_PORT=8001

# Response Agent
RESPONSE_AGENT_PORT=8002

# Summary Agent
SUMMARY_AGENT_PORT=8003

# LLM Configuration (Ollama or other LLM service)
OLLAMA_API_BASE=http://host.docker.internal:11434
OLLAMA_MODEL=llama3

# ChromaDB Configuration
CHROMA_DB_PATH=./data/chroma
CHROMA_HOST=chromadb
CHROMA_PORT=8000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/a2a_agents.log

# Gmail API Configuration (if needed)
# GMAIL_CREDENTIALS_JSON=path/to/credentials.json
# GMAIL_TOKEN_JSON=path/to/token.json
